# Hoisted dependencies for HeroUI
public-hoist-pattern[]=*@heroui/*

# Use strict-peer-dependencies=false to avoid issues with peer dependencies
strict-peer-dependencies=false

# Enable workspaces
shamefully-hoist=true

# Use node-linker=hoisted for better compatibility
node-linker=hoisted

# Exclude packages/contracts from hoisting and node-linker settings
hoist-pattern[]=!*packages/contracts/*
node-linker[]=!*packages/contracts/*
    "husky": "^9.1.6",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched",

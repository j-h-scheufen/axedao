# Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# App Environment (development, staging, production)
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Wallet & Chain Configuration
NEXT_PUBLIC_WALLET_ENV=development
NEXT_PUBLIC_CHAIN_ENV=development
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Provider URLs
NEXT_PUBLIC_SEPOLIA_PROVIDER=your_sepolia_provider_url
NEXT_PUBLIC_GNOSIS_PROVIDER=your_gnosis_provider_url

# Contract Addresses (use checksummed addresses)
NEXT_PUBLIC_AXE_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_DAO_ADDRESS=0x...
NEXT_PUBLIC_DAO_TREASURY_ADDRESS=0x...
NEXT_PUBLIC_DAO_SHARES_ADDRESS=0x...
NEXT_PUBLIC_DAO_LOOT_ADDRESS=0x...
NEXT_PUBLIC_DAO_TREASURY_SHAMAN_ADDRESS=0x...
NEXT_PUBLIC_AXE_TREASURY_ADDRESS=0x...
NEXT_PUBLIC_AXE_SWAP_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_AXE_MEMBERSHIP_ADDRESS=0x...
NEXT_PUBLIC_AXE_MEMBERSHIP_COUNCIL_ADDRESS=0x...
NEXT_PUBLIC_UNISWAPV2PAIR_ADDRESS=0x...
NEXT_PUBLIC_UNISWAPV2ROUTER_ADDRESS=0x...

# Pinata (IPFS)
NEXT_PUBLIC_PINATA_GATEWAY_URL=https://gateway.pinata.cloud
PINATA_JWT=your_pinata_jwt_token
NEXT_PUBLIC_PINATA_FILE_GROUP_ID=your_file_group_id

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/quilombo

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl_rand_base64_32

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Service (Mailjet)
# Sign up at https://www.mailjet.com/
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_API_SECRET=your_mailjet_api_secret

# Map Services
NEXT_PUBLIC_MAPTILER_KEY=your_maptiler_api_key

# The Graph
GRAPH_API_KEY=your_graph_api_key

# DAO Information
NEXT_PUBLIC_DAO_SITE_URL=https://axedao.io
NEXT_PUBLIC_DAO_EMAIL=support@axedao.io
NEXT_PUBLIC_SIGNAL_GROUP=your_signal_group_link

# SMTP Configuration (for local InBucket)
SMTP_HOST=localhost
SMTP_PORT=25

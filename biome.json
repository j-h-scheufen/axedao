{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/db/migrations/**/*",
      "!**/generated/**/*",
      "!**/cache",
      "!**/cache_forge",
      "!**/coverage",
      "!**/coverage.json",
      "!**/artifacts",
      "!**/broadcast",
      "!**/out",
      "!**/lib",
      "!**/*.sol",
      "!**/typechain-types"
    ]
  }
}
